<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit203.vinoweknow.dao.BoardDAO">

    <select id="listBoard" resultType="BoardVO">
        select * from Board
    </select>

   <!-- <select id="selectBoardList" parameterType="BoardVO" resultType="BoardVO">
        select *
        from BOARD
        where boardCode = #{boardCode}
    </select>-->

    <insert id="insertBoard" parameterType="BoardVO">
        INSERT INTO BOARD
        VALUES (#{boardCode}, #{boardName}, #{boardWriter}, #{boardDate}, #{boardView}, #{boardState})
    </insert>

    <!--<select id="selectBoardList" parameterType="BoardVO" resultType="BoardVO">
        select *
        from BOARD
    </select>-->

    <delete id="delBoard" parameterType="BoardVO">
        delete
        from BOARD
        where boardCode = #{boardCode}
    </delete>

</mapper>